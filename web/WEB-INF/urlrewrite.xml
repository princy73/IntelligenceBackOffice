<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite
    PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
    "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

<urlrewrite>
    <rule>
        <from>/produits/([0-9]+)/([a-zA-Z0-9-]+)</from>
        <to>/produits.jsp?id=$1&amp;nom=$2</to>
    </rule>
    <rule>
        <from>^/$</from>
        <to>/index</to>
    </rule>

</urlrewrite>